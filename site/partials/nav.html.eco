<% render = (items) => %>
  <ul class="nav nav-stacked">
    <% for item in items: %>
      <li<%= " class=active" if item.state %>>
        <a href="<%= item.url %>"><%= item.title %></a>
        <%- render item.children if item.children %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render @items %>
